<!DOCTYPE html>
<html>
{{> head}}
<body>
    {{> nav}}
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="/{{type}}s">{{display}}s</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/update/{{type}}s/{{_id}}">Update</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active">Delete</a>
      </li>
    </ul>
    <form class="form-border" action="/delete/{{type}}s/{{id}}" method="post">
        <div class="form-group row">
            <label for="formName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="formName" value="{{name}}" name="name" readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="formDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="formDescription" value="{{description}}" name="description" readonly>
            </div>
        </div>
        {{#if hasCredits}}
        <div class="form-group row">
            <label for="formCredits" class="col-sm-2 col-form-label">Credit Hours</label>
            <div class="col-sm-10">
                <select class="form-control" id="formCredits" readonly>
                    <option value="{{credits}}" hidden="hidden" selected="selected">{{credits}}</option>
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>
        </div>
        {{/if}}
        <button type="submit" class="btn btn-primary">Submit</button>
        <a class="btn btn-primary" href="/{{type}}s/{{id}}" role="button">Cancel</a>
    </form>
</body>
</html>
