<!DOCTYPE html>
<html>
{{> head}}
<body>
    {{> nav}}
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <a class="nav-link" href="/{{type}}">{{display}}</a>
      </li>
      <li class="nav-item">
        <a class="nav-link active">Create</a>
      </li>
    </ul>
    <form class="form-border" action="/create/{{type}}" method="post">
        <div class="form-group row">
            <label for="formName" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="formName" placeholder="Name" name="name" required>
            </div>
        </div>
        <div class="form-group row">
            <label for="formDescription" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="formDescription" placeholder="Description" name="description">
            </div>
        </div>
        {{#if hasCredits}}
        <div class="form-group row">
            <label for="formCredits" class="col-sm-2 col-form-label">Credit Hours</label>
            <div class="col-sm-10">
                <select class="form-control" id="formCredits" name="credits">
                    <option>0</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>
            </div>
        </div>
        {{/if}}
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>
</html>
